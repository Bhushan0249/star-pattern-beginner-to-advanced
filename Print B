
public class Print_B {

	// create the program and print [ B ] using  thread class sleep methods.

	public static void main(String[] args) throws Exception {

		for (int i = 1; i <= 10; i++) {

			for (int j = 1; j <= 6; j++) {

				if (i == 1 || i == 10 || i == 5 || j == 1 || j == 6 || j == 5 || i == 6 || i == 2 || i == 9 || j == 2) {
					System.out.print("*" + " ");
				} else {
					System.out.print(" " + "   ");
				}

			}
			System.out.println();
			Thread.sleep(1000);
		}

	}

}
