public class pattern1 {

//	*
//	* * 
//	* * * 
//	* * * *

	// first for loop is work on rows.
	// inner for loop is work on columns.
	
	public static void main(String[] args) {

		for (int i = 1; i <= 4; i++) {

			for (int j = 0; j <i; j++) {

				System.out.print("*"+" ");
			}
			System.out.println();
		}

	}

}
